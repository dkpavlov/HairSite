<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/assets/*</pattern>
    </excludes>
    <decorator name="employee" page="EmployeeDecorator.jsp">
        <excludes>
            <pattern>/assets/*</pattern>
        </excludes>
        <pattern>/employee/*</pattern>
    </decorator>
    <decorator name="admin" page="AdminDecorator.jsp">
        <excludes>
            <pattern>/assets/*</pattern>
        </excludes>
        <pattern>/admin/*</pattern>
    </decorator>
    <decorator name="public" page="UserDecorator.jsp">
        <excludes>
            <pattern>/assets/*</pattern>
        </excludes>
        <pattern>/cms/preview/**</pattern>
    </decorator>
    <decorator name="login" page="LoginDecorator.jsp">
        <excludes>
            <pattern>/assets/*</pattern>
        </excludes>
        <pattern>/login</pattern>
    </decorator>
    <decorator name="default" page="UserDecorator.jsp">
        <excludes>
            <pattern>/assets/*</pattern>
        </excludes>
        <pattern>/*</pattern>
    </decorator>
</decorators>